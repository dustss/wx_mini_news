/* tab bar板块选择*/

.blocksTop {
  position:fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 35rpx;
  line-height: 49rpx;
  width: 100%;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  background-color:white;
}

.blockSelection {
  background-color: whitesmoke;
}

.selected {
  background-color: blanchedalmond;
}

/**所选板块 新闻列表部分*/
.listBottom{
  padding-top: 49rpx;
}

.newsWrapper {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  margin: 10rpx;
}

.textNewsWrapper {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 500rpx;
}

.miniTextNewsWrapper {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  font-size: 25rpx;
}

.newsPicture {
   width: 250rpx; 
  height: 200rpx;
}